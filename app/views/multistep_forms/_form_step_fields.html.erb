<div class="nested-fields">
  <div class="jumbotron">
    <div class="form-group">
      <%= f.text_field :step_number, class: "form-control", placeholder: "Write step number" %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "Write name for step" %>
    </div>
    <div id="form_blocks" class="mt-3">
      <%= f.fields_for :form_blocks do |form_block| %>
        <%= render 'form_block_fields', f: form_block %>
      <% end %>
      <div class="links mb-1">
        <%= link_to_add_association 'Add Block', f, :form_blocks, class: "btn btn-success" %>
      </div>
    </div>
    <%= link_to_remove_association "Remove Step", f, class: "btn btn-danger" %>
  </div>
</div>