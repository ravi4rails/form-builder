<div class="controller">
  <div class="row">
    <div class="col-md-10 offset-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Form Name</th>
            <th>Submitted By</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @submissions.each do |submission| %>
            <tr>
              <% if submission.basic_form.present? %>
                <td><%= submission.basic_form.name %></td>
              <% else %>
                <td><%= submission.multistep_form.name %></td>
              <% end %>
              <td><%= submission.user.email %></td>
              <td><%= link_to "View Response", submission, class: "btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>