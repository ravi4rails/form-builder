<div class ="nested-fields">
  <div class="jumbotron">  
    <div class="row">
      <div class="col-md-12">
        <%= f.text_field :question, class: "form-control" %>
      </div>
    </div>
    <div id="mcq" class="mt-2">
      <%= f.fields_for :mcq_options do |mcq_option| %>
        <%= render 'mcq_option_fields', f: mcq_option %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add MCQ', f, :mcq_options %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.check_box :is_required %>
        <%= f.label :is_required %>
      </div>
      <div class="col-md-6">
        <%= link_to_remove_association "X", f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>