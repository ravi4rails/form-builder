<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <p id="notice"><%= notice %></p>
      <div class="card">
        <div class="card-header">
          <h4 class="card-title text-center"><%= @basic_form.name %></h4>
        </div>
        <div class="card-body">
          <p class="lead"><%= @basic_form.description %></p>
          <h1>Total Submissions <span class="badge badge-secondary"><%= @basic_form.submissions.count %></span></h1>
          <h2><%= link_to "View all Submissions", submissions_basic_form_path(@basic_form), class: "btn btn-primary" %></h2>
          <%= link_to 'Edit', edit_basic_form_path(@basic_form) %> |
          <%= link_to 'Back', basic_forms_path %> |
          <%= link_to "Preview Form", preview_form_basic_form_path(@basic_form)%>
        </div>
      </div>
    </div>
  </div>
</div>
