<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <p id="notice"><%= notice %></p>
      <h1>Basic Forms</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @basic_forms.each do |basic_form| %>
            <tr>
              <td><%= basic_form.name %></td>
              <td><%= link_to 'Show', basic_form, class: "btn btn-info" %></td>
              <td><%= link_to 'Edit', edit_basic_form_path(basic_form), class: "btn btn-secondary" %></td>
              <td><%= link_to 'Destroy', basic_form, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Basic Form', new_basic_form_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

