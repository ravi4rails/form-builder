<div class="nested-fields">
  <div class="jumbotron">
    <div class= "form-group">
      <%= f.label :question %>
      <%= f.text_field :question, class: "form-control" %>
    </div>
    <div class= "form-group">
      <%= f.label :answer %>
      <%= f.text_field :answer, class: "form-control", disabled: true, placeholder: "Short question answer here" %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.check_box :is_required %>
        <%= f.label :is_required %>
      </div>
      <div class="col-md-6">
        <%= link_to_remove_association "Remove Short Question", f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>