<div class="nested-fields">
  <div class="jumbotron">
    <div class="form-group">
      <%= f.select :field_type, options_for_select(BlockField::FIELDTYPE), {prompt: "Select field type"}, {class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", value: "Untitled field" %>
    </div>
    <div class="form-group">
      <%= f.text_field :label, class: "form-control", value: "Untitled label" %>
    </div>
    <div class="form-group">
      <%= f.text_field :helptext, class: "form-control", value: "Untitled Help" %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.check_box :is_required, style: "height:25px;width:25px;" %>
        <%= f.label :is_required %>
      </div>
      <div class="col-md-6">
        <%= link_to_remove_association "Remove Field", f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>